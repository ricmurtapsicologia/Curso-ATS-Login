<script>
    const matriculasValidas = [
        "1368646", "1359843", "1430750", "1605971", "1603687",
        "1613892", "1674993", "1075795", "1363845", "1550375",
        "1480128", "1479278", "1554559", "1525120", "1245661",
        "1549880", "1479088", "1524776", "1644525", "1788868", 
        "terapiadoesquema"
    ];

    function verificarMatricula() {
        const matricula = document.getElementById("matricula").value;
        const mensagem = document.getElementById("mensagem");

        if (matriculasValidas.includes(matricula)) {
            window.location.href = "https://ricmurtapsicologia.github.io/Curso-ATS/"; // Redireciona para a página protegida
        } else {
            mensagem.style.display = "block"; // Exibe mensagem de matrícula inválida
        }
    }
</script>

